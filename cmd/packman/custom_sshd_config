# Базовые настройки
Port 22
ListenAddress 0.0.0.0
Protocol 2
PermitRootLogin yes
PasswordAuthentication yes
PubkeyAuthentication yes

# Лимиты для передачи файлов
MaxStartups 100:30:200  # Макс. одновременных подключений
MaxSessions 10          # Макс. сессий на пользователя
MaxAuthTries 3          # Макс. попыток аутентификации
ClientAliveInterval 30  # Таймаут неактивных сессий (сек)

# Лимиты SFTP (если используется)
Subsystem sftp internal-sftp -f AUTHPRIV -l INFO
X11Forwarding no
AllowTcpForwarding no